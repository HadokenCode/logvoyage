<div class="container-fluid">
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Source groups</li>
  </ol>
  <div class="row">
    <div class="col-md-6">
      <h3>
      Source groups
      <span class="actions">
      <a href="/sources/new">
        <span class="glyphicon glyphicon glyphicon-plus" aria-hidden="true"></span> Create
      </a>
      </span>
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      {{if isEmpty .context.User.SourceGroups}}
      No groups found.
      {{end}}
      {{range .context.User.SourceGroups}}
      <div class="panel panel-default">
        <div class="panel-footer">
          <form class="form-horizontal" role="form" method="post">
            <div class="form-group">
              <label class="col-sm-2 control-label">Name</label>
              <div class="col-sm-10" style="padding-top:10px">
                <a href="/sources/edit/{{.Id}}">{{.Name}}</a>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Description</label>
              <div class="col-sm-10" style="padding-top:10px">
                {{if len .Description}}
                {{.Description}}
                {{else}}
                <span style="color:#979797">None</span>
                {{end}}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Types</label>
              <div class="col-sm-10" style="padding-top:10px">
                {{if len .Types}}
                {{range .Types}}
                {{.}}
                {{end}}
                {{else}}
                <span style="color:#979797">Empty types list. You should add at least one type.</span>
                {{end}}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label"></label>
              <div class="col-sm-10" style="padding-top:10px">
                <a href="/sources/edit/{{.Id}}"  class="btn btn-sm btn-success">
                  <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
                </a>
                <a href="/sources/delete/{{.Id}}"  class="btn btn-sm btn-danger">
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
      {{end}}
    </div>
  </div>
</div>